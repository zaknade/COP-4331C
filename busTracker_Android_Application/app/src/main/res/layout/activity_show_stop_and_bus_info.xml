<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.santiagorook.selectaroute.views.ShowStopAndBusInfo">


    <Button
        android:id="@+id/viewStopMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/viwRouteSchedule"
        android:layout_below="@+id/noBuses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="View Stop Location" />

    <TextView
        android:id="@+id/routeNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Route: " />


    <TextView
        android:id="@+id/stopNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/routeNameText"
        android:layout_below="@+id/routeNameText"
        android:layout_column="0"
        android:layout_marginTop="22dp"
        android:layout_row="2"
        android:text="Stop: " />

    <TextView
        android:id="@+id/timerInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="The Next Bus Will Arrive in  Approximately: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/countDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerInfoText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="00:00:00"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noBuses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countDown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="No More Buses Available Today"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/busArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/viwRouteSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noBuses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="View Route Schedule" />

    <Button
        android:id="@+id/btnMapsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewStopMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Maps View" />

</RelativeLayout>
